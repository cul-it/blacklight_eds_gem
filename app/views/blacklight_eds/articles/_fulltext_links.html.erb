<%- if has_any_fulltext? record %>
    <dt class="blacklight-fulltext">Full-Text Options:</dt>
    <dd class="blacklight-fulltext">
      <%- if has_pdf?(record) %>
          <%- eds_fulltext_links(record, ['pdflink']).each do |link| %>
              <%= render partial: 'fulltext_link', locals: { record: record, link: link, label: 'PDF Full Text' } %>
              <%= delimiter %>
          <%- end %>
      <%- end %>
      <%- if has_html?(record) %>
          <%= render partial: 'fulltext_html_link', locals: { record: record } %>
          <%= delimiter %>
      <%- end %>
      <%- if has_smartlink?(record) %>
          <%- eds_fulltext_links(record, ['pdflink']).each do |link| %>
              <%= render partial: 'fulltext_link', locals: { record: record, link: link, label: 'Linked Full Text' } %>
              <%= delimiter %>
          <%- end %>
      <%- end %>
      <%- if has_ebook?(record) %>
          <%- eds_fulltext_links(record, ['ebook-pdf', 'ebook-epub']).each do |link| %>
              <%= render partial: 'fulltext_link', locals: { record: record, link: link, label: 'eBook Full Text' } %>
              <%= delimiter %>
          <%- end %>
      <%- end %>
      <%- if has_fulltext?(record) %>
          <%= show_best_fulltext_link_detail(record) %>
      <%- end %>
    </dd>
<%- elsif has_ill? record %>
    <dt class="blacklight-ill">Interlibrary Loan:</dt>
    <dd class="blacklight-ill"><%= show_ill(record) %></dd>
<%- end %>